<Window x:Class="go_encryptor.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:go_encryptor"
        mc:Ignorable="d"
        Title="Enter password" Height="118.012" Width="267.508"
        ResizeMode="NoResize"
        Icon="Resources/icons/logo.png"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <PasswordBox Name="lblPassword" HorizontalAlignment="Left" Margin="21,10,0,0" VerticalAlignment="Top" Width="220" Grid.ColumnSpan="2"/>
        <Button Name="btnOK" Content="OK" Click="Ok_Click" IsDefault="True" HorizontalAlignment="Left" Margin="49,46,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnCancel" Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
    </Grid>
</Window>
